<%= simple_form_for(@sys_user_right) do |f| %>

  <%= f.input :sys_user_position_id, :label => '职位/Position:', :collection => SysUserPosition.order("position"), :label_method => lambda {|r| "#{r.position}, - #{r.position_name}"}, 
                           :value_method => :id,  :include_blank => true %>
  <%= f.input :sys_action_on_table_id, :label => '数据表/操作：', :collection => SysActionOnTable.order("table_name, action"), :label_method => lambda { |r| "#{r.table_name}, - #{r.action}"},
                           :value_method => :id, :include_blank => true %>
  <%= f.input :matching_column_name, :lable => 'MatchingColumnName:' %>
  <%= f.button :submit, '保存' %>  

<% end %>
